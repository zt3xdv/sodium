{
  "name": "MongoDB",
  "description": "MongoDB NoSQL database server",
  "author": "Sodium",
  "docker_images": {
    "MongoDB 7": "mongo:7",
    "MongoDB 6": "mongo:6",
    "MongoDB 5": "mongo:5"
  },
  "startup": "mongod --bind_ip 0.0.0.0 --port {{SERVER_PORT}} --dbpath /mnt/server/data",
  "config": {
    "files": {},
    "startup": {
      "done": "Waiting for connections"
    },
    "stop": "^C"
  },
  "scripts": {
    "install": {
      "container": "mongo:7",
      "entrypoint": "/bin/bash",
      "script": "#!/bin/bash\nmkdir -p /mnt/server/data"
    }
  },
  "variables": [
    {
      "name": "Port",
      "description": "MongoDB port",
      "env_variable": "SERVER_PORT",
      "default_value": "27017",
      "user_viewable": true,
      "user_editable": false,
      "rules": "required|integer"
    }
  ]
}
