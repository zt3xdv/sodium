{
  "name": "Bun Runtime",
  "description": "Fast all-in-one JavaScript runtime with Bun",
  "author": "Sodium",
  "docker_images": {
    "Bun Latest": "oven/bun:latest",
    "Bun 1.1": "oven/bun:1.1",
    "Bun 1.0": "oven/bun:1.0",
    "Bun Alpine": "oven/bun:alpine"
  },
  "startup": "bun install && bun run {{MAIN_FILE}}",
  "config": {
    "files": {},
    "startup": {
      "done": "listening"
    },
    "stop": "^C"
  },
  "scripts": {
    "install": {
      "container": "oven/bun:latest",
      "entrypoint": "/bin/sh",
      "script": "#!/bin/sh\ncd /mnt/server\nif [ ! -f package.json ]; then\n  bun init -y\nfi"
    }
  },
  "variables": [
    {
      "name": "Main File",
      "description": "The main entry point file",
      "env_variable": "MAIN_FILE",
      "default_value": "index.ts",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|max:100"
    },
    {
      "name": "Hot Reload",
      "description": "Enable hot reload with --watch",
      "env_variable": "HOT_RELOAD",
      "default_value": "false",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|in:true,false"
    }
  ]
}
