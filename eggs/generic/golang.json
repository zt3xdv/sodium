{
  "name": "Go Application",
  "description": "Go/Golang application server",
  "author": "Sodium",
  "docker_images": {
    "Go 1.22": "golang:1.22-alpine",
    "Go 1.21": "golang:1.21-alpine",
    "Go 1.20": "golang:1.20-alpine"
  },
  "startup": "go build -o app . && ./app",
  "config": {
    "files": {},
    "startup": {
      "done": "listening"
    },
    "stop": "^C"
  },
  "scripts": {
    "install": {
      "container": "golang:1.22-alpine",
      "entrypoint": "/bin/sh",
      "script": "#!/bin/sh\ncd /mnt/server\nif [ ! -f go.mod ]; then\n  go mod init app\n  cat > main.go << 'EOF'\npackage main\n\nimport \"fmt\"\n\nfunc main() {\n    fmt.Println(\"Hello from Sodium!\")\n}\nEOF\nfi"
    }
  },
  "variables": [
    {
      "name": "Build Tags",
      "description": "Go build tags",
      "env_variable": "BUILD_TAGS",
      "default_value": "",
      "user_viewable": true,
      "user_editable": true,
      "rules": "nullable|string|max:100"
    }
  ]
}
