{
  "name": "Python",
  "description": "Python application server",
  "author": "Sodium",
  "docker_images": {
    "Python 3.12": "python:3.12-slim",
    "Python 3.11": "python:3.11-slim",
    "Python 3.10": "python:3.10-slim",
    "Python 3.9": "python:3.9-slim",
    "Python Alpine": "python:3.12-alpine"
  },
  "startup": "pip install -r requirements.txt 2>/dev/null; python {{MAIN_FILE}}",
  "config": {
    "files": {},
    "startup": {
      "done": "Running on"
    },
    "stop": "^C"
  },
  "scripts": {
    "install": {
      "container": "python:3.12-slim",
      "entrypoint": "/bin/bash",
      "script": "#!/bin/bash\ncd /mnt/server\nif [ ! -f main.py ]; then\n  echo 'print(\"Hello from Sodium!\")' > main.py\n  touch requirements.txt\nfi"
    }
  },
  "variables": [
    {
      "name": "Main File",
      "description": "The main Python file to run",
      "env_variable": "MAIN_FILE",
      "default_value": "main.py",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|max:100"
    },
    {
      "name": "Python Arguments",
      "description": "Additional arguments for Python",
      "env_variable": "PYTHON_ARGS",
      "default_value": "",
      "user_viewable": true,
      "user_editable": true,
      "rules": "nullable|string|max:200"
    }
  ]
}
