{
  "id": "example-plugin",
  "name": "Example Plugin",
  "version": "1.0.0",
  "description": "Example plugin demonstrating Sodium plugin API with injections",
  "author": "Sodium Team",
  "website": "https://github.com/example/plugin",
  "license": "MIT",
  
  "main": "index.js",
  
  "permissions": [
    "routes",
    "hooks",
    "ui",
    "websocket",
    "storage",
    "injections"
  ],
  
  "sidebar": [
    {
      "path": "/example",
      "icon": "extension",
      "label": "Example",
      "position": "bottom",
      "priority": 50
    }
  ],
  
  "injections": [
    {
      "target": "inject-auth-login-providers",
      "file": "injections/oauth-buttons.html",
      "position": "append",
      "priority": 10
    },
    {
      "target": "inject-auth-register-providers",
      "file": "injections/oauth-buttons.html",
      "position": "append",
      "priority": 10
    },
    {
      "target": "inject-dashboard-header-after",
      "html": "<div class='plugin-banner'><span class='material-icons-outlined'>celebration</span> Welcome to Sodium! This banner is injected by a plugin.</div>",
      "priority": 5
    }
  ],
  
  "slots": {
    "auth:login:providers": [
      {
        "html": "",
        "priority": 10
      }
    ]
  },
  
  "styles": [
    "assets/style.css"
  ],
  
  "scripts": [
    "assets/client.js"
  ],
  
  "assets": "assets",
  
  "pages": [
    {
      "path": "/example",
      "title": "Example Page",
      "template": "pages/example.html"
    }
  ],
  
  "settings": {
    "schema": [
      {
        "key": "google_client_id",
        "type": "string",
        "label": "Google Client ID",
        "description": "OAuth 2.0 Client ID from Google Cloud Console",
        "required": false
      },
      {
        "key": "google_enabled",
        "type": "boolean",
        "label": "Enable Google Login",
        "default": false
      },
      {
        "key": "discord_client_id",
        "type": "string",
        "label": "Discord Client ID",
        "required": false
      },
      {
        "key": "discord_enabled",
        "type": "boolean",
        "label": "Enable Discord Login",
        "default": false
      },
      {
        "key": "github_client_id",
        "type": "string",
        "label": "GitHub Client ID",
        "required": false
      },
      {
        "key": "github_enabled",
        "type": "boolean",
        "label": "Enable GitHub Login",
        "default": false
      }
    ]
  }
}
